<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.fiskur.floodmonitoringharness" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".MenuActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AlertsActivity"
            android:label="@string/menu_warnings_and_alerts"/>

        <activity android:name=".AlertsDemoActivity"
            android:label="@string/menu_warnings_and_alerts_demo" />

        <activity android:name=".ThreeDayForecastActivity"
            android:label="@string/menu_three_day_forecast" />

        <activity android:name=".StationsActivity"
            android:label="@string/menu_measurement_stations" />
    </application>

</manifest>
